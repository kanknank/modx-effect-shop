ln -s ../../../_dev/$GITNAME/assets/components/$NAME   public_html/assets/components/$NAME

cd ~/_dev/modx-effect-shop

Сборка пакета
cd ~/_dev/modx-effect-shop/_build
php7.2 build.transport.php

git add -A && git commit -m ''
